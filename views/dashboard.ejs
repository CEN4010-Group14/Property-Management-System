</style>

<script>

    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
        var actions = `<td>
            <a class="add" title="Done" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
            <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
            <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
        </td>`
        
        // Append table with add row form on add new button click
        $(".add-new").click(function(){
            $(this).attr("disabled", "disabled");
            var index = $("table tbody tr:last-child").index();
            var row = '<tr>' +
                '<td><input type="date" class="form-control" name="dateOfPurchase" id="dateOfPurchase"></td>' +
                '<td><input type="text" class="form-control" name="price" placeholder="$0" id="price"></td>' +
                '<td><input type="text" class="form-control" name="address" placeholder="address" id="Address"></td>' +
                '<td><input type="text" class="form-control" name="zipCode" placeholder="00000" id="zipCode"></td>' +
                '<input type="hidden" class="form-control" name="checkAction" placeholder="" id="checkAction">' +
                actions +
            '</tr>';
            $("table").append(row);		
            $("table tbody tr").eq(index + 1).find(".add, .edit").toggle();
            $('[data-toggle="tooltip"]').tooltip();
        });
        // Add row on add button click
        $(document).on("click", ".add", function(){
            document.getElementById('checkAction').setAttribute('value', 'add');
            document.getElementById('property_form').submit();
            var empty = false;
            var input = $(this).parents("tr").find('input[type="text"]');
            var inputDate = $(this).parents("tr").find('input[type="date"]');
            input.each(function(){
                if(!$(this).val()){
                    $(this).addClass("error");
                    empty = true;
                } else{
                    $(this).removeClass("error");
                }
            });
            inputDate.each(function(){
                if(!$(this).val()){
                    $(this).addClass("error");
                    empty = true;
                } else{
                    $(this).removeClass("error");
                }
            });
            $(this).parents("tr").find(".error").first().focus();
            if(!empty){
                input.each(function(){
                    $(this).parent("td").html($(this).val());
                });	
                inputDate.each(function(){
                    $(this).parent("td").html($(this).val());
                });		
                $(this).parents("tr").find(".add, .edit").toggle();
                $(".add-new").removeAttr("disabled");
            }		
        });
        // Edit row on edit button click
        $(document).on("click", ".edit", function(){		
            $(this).parents("tr").find("td:first-child").each(function(){
                $(this).html('<input type="date" class="form-control" value="' + $(this).text() + '">');
            });	
            
            $(this).parents("tr").find("td:not(:first-child):not(:last-child)").each(function(){
                $(this).html('<input type="text" class="form-control" value="' + $(this).text() + '">');
            });		
            $(this).parents("tr").find(".add, .edit").toggle();
            $(".add-new").attr("disabled", "disabled");
        });
        // Delete row on delete button click
        $(document).on("click", ".delete", function(){
            if (confirm("Delete this property?")){
                document.getElementById('checkAction').setAttribute('value', 'delete');
                document.getElementById('property_form').submit();
                $(this).tooltip('hide');
                $(this).parents("tr").remove();
                $(".add-new").removeAttr("disabled");
                $(this).parents("tr").find(".add, .delete").toggle();
            } 
        });

        // Print Table
        $(document).on('click', '.print', function(){
            var table = document.getElementById("dataTable");
            var htmlToPrint = '' +
                '<style type="text/css">' +
                'table th, table td {' +
                'border:1px solid #000;' +
                'padding:0.5em;' +
                '}' +
                '</style>';
            newWin = window.open('placeholder');
            newWin.document.write(table.outerHTML);
            newWin.document.write('<html><head><title>Property Table</title>...');
            newWin.document.write('<style type="text/css">\
                @media print {\
                    #dataTable {\
                        font-size: 18px;\
                    } \
                    .table th{\
                        border:1px solid #000;\
                        padding:0.5em;\
                        text-align: center;\
                    }\
                    .table td {\
                        border:1px solid #000;\
                        padding:0.5em;\
                        text-align: right;\
                    }\
                    .noprint {\
                        display:none;\
                    }\
                }</style>');
            newWin.print();
            newWin.close();
        })
    });
</script>

